/* Main kernel entry point, called by trampoline */
void start_kernel(start_info_t *si)
{
    // write something to the XEN dmesg log
    PRINTK("pc400 started");

    // initialise communications with the hypervisor
    hypervisor_start(si);

    struct timeval start = { 0 };
    struct timeval now = { 0 };
    while (1)
    {
        HYPERVISOR_sched_op(SCHEDOP_yield, 0);

        // wait a second
        do
        {
            HYPERVISOR_sched_op(SCHEDOP_yield,0);
            xentime_gettimeofday(&now, NULL);
        }
        while ((now.tv_sec - start.tv_sec) < 1);

        // prompt
        xenconsole_write("timeofday=%02i:%02i:%02i\r\n", (int)(now.tv_sec / 3600) % 24, (int)(now.tv_sec / 60) % 60, (int)now.tv_sec % 60);

        start = now;
    }
}

